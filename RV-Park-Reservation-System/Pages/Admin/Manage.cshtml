@page
@model RV_Park_Reservation_System.Pages.Admin.ManageModel
@{
    ViewData["Title"] = "Manage";
}

<div class="container">
    <h1 class="display-4 text-center text-primary my-5">DATABASE TABLES</h1>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="site-categories-tab" data-bs-toggle="tab" data-bs-target="#site-categories" type="button" role="tab" aria-controls="site-categories" aria-selected="true">Site Categories</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="site-rates-tab" data-bs-toggle="tab" data-bs-target="#site-rates" type="button" role="tab" aria-controls="site-rates" aria-selected="false">Site Rates</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="special-events-tab" data-bs-toggle="tab" data-bs-target="#special-events" type="button" role="tab" aria-controls="special-events" aria-selected="false">Special Events</button>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane active" id="site-categories" role="tabpanel" aria-labelledby="site-categories-tab">
            <div class="border backgroundWhite container p-3">
                <div class="row">
                    <div class="col-12 text-right">
                        <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                            <i class="fas fa-plus"></i>&nbsp;Create New
                        </a>
                    </div>
                </div>
                <br />
                <br />
                <table id="DTsiteCat" class="table table-striped table-bordered mx-0 w-100">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Location ID
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="tab-pane" id="site-rates" role="tabpanel" aria-labelledby="site-rates-tab">
            <div class="border backgroundWhite container p-3">
                <div class="row">
                    <div class="col-12 text-right">
                        <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                            <i class="fas fa-plus"></i>&nbsp;Create New
                        </a>
                    </div>
                </div>
                <br />
                <br />
                <table id="DTsiteRate" class="table table-striped table-bordered mx-0 w-100">
                    <thead>
                        <tr>
                            <th>
                                Rate Amount
                            </th>
                            <th>
                                Start Date
                            </th>
                            <th>
                                End Date
                            </th>
                            <th>
                                Site Category ID
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="tab-pane" id="special-events" role="tabpanel" aria-labelledby="special-events-tab">
            <div class="border backgroundWhite container p-3">
                <div class="row">
                    <div class="col-12 text-right">
                        <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                            <i class="fas fa-plus"></i>&nbsp;Create New
                        </a>
                    </div>
                </div>
                <br />
                <br />
                <table id="DTspecEvent" class="table table-striped table-bordered mx-0 w-100">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Start Date
                            </th>
                            <th>
                                End Date
                            </th>
                            <th>
                                Description
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/datatables/manage.js"></script>
<script>
    var triggerTabList = [].slice.call(document.querySelectorAll('#myTab a'))
    triggerTabList.forEach(function (triggerEl) {
        var tabTrigger = new bootstrap.Tab(triggerEl)

        triggerEl.addEventListener('click', function (event) {
            event.preventDefault()
            tabTrigger.show()
        })
    })
</script>
}