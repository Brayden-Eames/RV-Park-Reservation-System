@page
@model RV_Park_Reservation_System.Pages.Admin.ManageModel
@{
    ViewData["Title"] = "Manage";
}

<div class="container">
    <h1 class="display-4 text-center text-primary my-5">DATABASE TABLES</h1>
    <div class="accordion" id="datatableAccordion">
        <div class="accordion-item">
            <h4 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <h4>Site Categories</h4>
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#datatableAccordion">
                <div class="accordion-body">
                    <div class="border backgroundWhite container p-3">
                        <div class="row">
                            <div class="col-12 text-right">
                                <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                                    <i class="fas fa-plus"></i>&nbsp;Create New
                                </a>
                            </div>
                        </div>
                        <br />
                        <br />
                        <table id="DTsiteCat" class="table table-striped table-bordered mx-0 w-100">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Location ID
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
                <button class="accordion-button collapsed btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    <h4>Sites</h4>
                </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#datatableAccordion">
                <div class="accordion-body">
                    <div class="border backgroundWhite container p-3">
                        <div class="row">
                            <div class="col-12 text-right">
                                <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                                    <i class="fas fa-plus"></i>&nbsp;Create New
                                </a>
                            </div>
                        </div>
                        <br />
                        <br />
                        <table id="DTsite" class="table table-striped table-bordered mx-0 w-100">
                            <thead>
                                <tr>
                                    <th>
                                        Number
                                    </th>
                                    <th>
                                        Length
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
                <button class="accordion-button collapsed btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    <h4>Site Rates</h4>
                </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#datatableAccordion">
                <div class="accordion-body">
                    <div class="border backgroundWhite container p-3">
                        <div class="row">
                            <div class="col-12 text-right">
                                <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                                    <i class="fas fa-plus"></i>&nbsp;Create New
                                </a>
                            </div>
                        </div>
                        <br />
                        <br />
                        <table id="DTsiteRate" class="table table-striped table-bordered mx-0 w-100">
                            <thead>
                                <tr>
                                    <th>
                                        Rate Amount
                                    </th>
                                    <th>
                                        Start Date
                                    </th>
                                    <th>
                                        End Date
                                    </th>
                                    <th>
                                        Site Category ID
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script src="~/js/datatables/manage.js"></script>
}