@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center hero w-100 h-100 flex-fill">
    <h1 class="text-warning display-3 mt-5">FAMCAMP RESERVATION SYSTEM</h1>
    @if (User.Identity.IsAuthenticated) {
        <h3 class="text-white">Welcome!</h3>
    }
    else
    {
        <h3 class="text-white">Login or Register a new account to reserve a site!</h3>
    }
    <div class="container mt-5">
        <div class="col-12 col-md-4 justify-content-center align-content-center ml-2 mr-2">
            <div class="border rounded ml-2 mr-2 famcamp-info">
                <div>
                    <h3 class="text-center text-light mt-3">FAMCAMP Information</h3>
                    <p class="text-left text-light pl-5">Quiet Hours: 2200-0800 (Generators not permitted during quiet hours)</p>
                    <p class="text-left text-light pl-5">Check-in Time: After 1300</p>
                    <p class="text-left text-light pl-5">Check-out Time: By 1200</p>
                    <p class="text-left text-light pl-5">Office Hours: Monday-Friday 0800 – 1600</p>
                    <p class="text-left text-light pl-5">Phone: (801) 775-3250</p>
                    <p class="text-left text-light pl-5">
                        Address: 5622 Park Lane, Bldg. 564 Hill AFB, UT 84056
                    </p>
                    <h2 class="text-center text-light mt-3">PRICING</h2>
                    <p class="text-left text-light pl-5">$25 per day for full hookups</p>
                    <p class="text-left text-light pl-5">$17 per day for dry camping</p>   

                </div>
            </div>
        </div>
    </div>
</div>
