@using Infrastructure.Services
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RV_Park_Reservation_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">RV_Park_Reservation_System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole(SD.AdminRole))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Index">Admin Page</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Reports">Reports</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Reservations">Reservations</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Sites">Sites</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Admin/Billing">Billing</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" href="#" data-toggle="dropdown">
                                        Edit
                                    </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item text-dark" asp-page="/Admin/Users/Index">Users</a>
                                        <a class="dropdown-item text-dark" asp-page="/Admin/Manage">Other</a>
                                    </div>
                                </li>

                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Client/Booking">Reserve a Site</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Client/MyReservations">My Reservations</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - RV Park Reservation System
            <a class="nav-link text-dark" asp-page="/Shared/About">About</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
