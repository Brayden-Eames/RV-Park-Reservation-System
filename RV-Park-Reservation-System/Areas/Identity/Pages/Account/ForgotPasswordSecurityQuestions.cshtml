@page
@model RV_Park_Reservation_System.Areas.Identity.Pages.Account.ForgotPasswordSecurityQuestionsModel
@{
    ViewData["Title"] = "Security Confirmation";
}

@if (Model.Error)
{
    <div class="py-4 my-4">
        <div class="row form-group">
            <div class="col-8 offset-2">
                <div class="card">
                    <div class="card-body align-items-center px-lg-5 pt-4">
                            <h1 class="text-center">@ViewData["Title"]</h1>
                            <h4 class="text-center">No Security Questions exist</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="py-4 my-4">
        <div class="row form-group">
            <div class="col-8 offset-2">
                <div class="card">
                    <div class="card-body px-lg-5 pt-4">
                        <h1 class="text-center">@ViewData["Title"]</h1>

                        <hr />
                        <form method="post">
                            <input type="hidden" asp-for="Input.Email" />
                            <h3>@Model.Input.Question1</h3>

                            <div class="form-group">

                                <input asp-for="Input.Answer1" class="form-control" />
                                <span asp-validation-for="Input.Answer1" class="text-danger"></span>
                            </div>
                            <h3>@Model.Input.Question2</h3>
                            <div class="form-group">

                                <input asp-for="Input.Answer2" class="form-control" />
                                <span asp-validation-for="Input.Answer2" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Request Reset</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
