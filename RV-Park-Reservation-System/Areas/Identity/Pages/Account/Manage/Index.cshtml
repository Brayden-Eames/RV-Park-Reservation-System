@page
@model RV_Park_Reservation_System.Areas.Identity.Pages.Account.Manage.IndexModel
@{
//ViewData["Title"] = "Account";
}

<div class="container">
    <h1 class="display-4 text-center text-primary my-5">ACCOUNT</h1>
    <div class="border backgroundWhite mt-5 p-3">
        <div class="row">

            <form method="post">
                <input type="hidden" asp-for="@Model.userAccountVM.user.Id" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.userAccountVM.user.CustFirstName">First Name</label>
                    <input value="@Model.userAccountVM.user.CustFirstName" type="text" asp-for="@Model.userAccountVM.user.CustFirstName" class="form-control" />
                    <span asp-validation-for="@Model.userAccountVM.user.CustFirstName" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="@Model.userAccountVM.user.CustLastName">Last Name</label>
                    <input value="@Model.userAccountVM.user.CustLastName" type="text" asp-for="@Model.userAccountVM.user.CustLastName" class="form-control" />
                    <span asp-validation-for="@Model.userAccountVM.user.CustLastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.userAccountVM.user.Email">Email</label>
                    <input value="@Model.userAccountVM.user.Email" type="email" asp-for="@Model.userAccountVM.user.Email" class="form-control" />
                    <span asp-validation-for="@Model.userAccountVM.user.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.userAccountVM.user.PhoneNumber">Phone Number</label>
                    <input value="@Model.userAccountVM.user.PhoneNumber" type="tel" asp-for="@Model.userAccountVM.user.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.userAccountVM.user.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.userAccountVM.user.DODAffiliationID">DOD Affiliation</label>
                    @Html.DropDownListFor(d => d.userAccountVM.user.DODAffiliationID,
                        Model.userAccountVM.DODAffiliationList,
                        " - Select DOD Affiliation -",
                        new { @class = "form-control", @id = "ddlDOD" })
                    <span asp-validation-for="@Model.userAccountVM.user.DODAffiliationID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.userAccountVM.user.ServiceStatusID">Service Status Type</label>
                    @Html.DropDownListFor(d => d.userAccountVM.user.ServiceStatusID,
                        Model.userAccountVM.ServiceStatusTypesList,
                        " - Select Service Status Type -",
                        new { @class = "form-control", @id = "ddlSST" })
                    <span asp-validation-for="@Model.userAccountVM.user.ServiceStatusID" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <div class="form-group">
                        <button id="submission" type="submit" class="btn btn-primary w-50">Save</button>
                    </div>
                </div>
            </form>
        </div>       
    </div>
</div>


@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "list",
            menubar: "file edit format"
        });

        function ValidateInput() {            

            if ($('#ddlDOD option:selected').val() == 0) {
                swal('Error', 'Please Select a DOD Affiliation', 'error')
                return false;
            }

            if ($('#ddlSST option:selected').val() == 0) {
                swal('Error', 'Please Select a Service Status Type', 'error')
                return false;
            }

            return true;
        }

    </script>
}