@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmed email";
}

<div class="py-4 my-4">
    <div class="row form-group">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <h1 class="text-center">@ViewData["Title"]</h1>
                    <hr />
                    <h5 class="text-center">Please set your security questions to activate reset password.</h5>
                    <div class="row">
                        <div class="col-4"></div>
                        <div class="col-4">
                            <input class="container-fluid btn btn-primary"  type="submit" value="submit" />
                        </div>
                        <div class="col-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>